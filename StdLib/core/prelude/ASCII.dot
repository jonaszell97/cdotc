
module std.string

internal let alphaNumeric: [u8; ?] = "0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
internal let printable: [u8; ?] = "0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ`$&%<>|()[]{}+-/*\n?!#=\"';,.:"

/// \return a random alpha numeric character.
public def randomAlphaNumeric() -> Char {
    return alphaNumeric[Byte.random() % (alphaNumeric.size as Byte)]
}

/// \return a random alpha numeric string of length @param{len}.
public def randomAlphaNumeric(withLength len: Int) -> String {
    var str = String(withInitialCapacity: len)
    for _ in 0..len {
        str.push(randomAlphaNumeric())
    }

    return str
}

/// \return a random printable character.
public def randomPrintable() -> Char {
    return alphaNumeric[Byte.random() % (printable.size as Byte)]
}

/// \return a random printable string of length \param len.
public def randomPrintable(withLength len: Int) -> String {
    var str = String(withInitialCapacity: len)
    for _ in 0..len {
        str.push(randomPrintable())
    }

    return str
}

