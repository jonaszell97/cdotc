
class Array<T> with Printable, Iterable<T> {
    var raw: T* { get }
    var size: Int { get }

    var capacity: Int { get } = 0

    static def initRaw(arr: ref T*, len: Int) unsafe {
        let newArr: T[len]
        arr = newArr
    }

    public init (arr: T*, len: Int) {
        raw = arr
        size = len
        capacity = len
    }

    public init (i: Int) {
        capacity = i
        size = 0
        initRaw(raw, i)
    }

    public init {
        capacity = 1
        size = 0
        initRaw(raw, 1)
    }

    public def getIterator() -> ArrayIterator<T> {
        return ArrayIterator<T>(self)
    }

    public def push(t: T) unsafe {
        if (size + 1 > capacity) {
            capacity = capacity << 1
            let newArr = Extern.C.malloc(capacity) as T*
            copyTo(newArr)
            
            Extern.C.free(raw as Int8*)
            raw = newArr
        }

        raw[size] = t
        ++size
    }

    public def pop -> T {
        let back = raw[size - 1]
        --size
        
        return back
    }

    public def reserve (i: Int) unsafe {
        capacity = capacity + i
        let newArr = Extern.C.malloc(capacity) as T*
        copyTo(newArr)

        Extern.C.free(raw as Int8*)
        raw = newArr
    }

    public def first -> T {
        return raw[0]
    }

    public def last -> T {
        return raw[size - 1]
    }

    public def at(i: Int) -> T {
        return self[i]
    }

    def copyTo(lhs: T*) {
        for (let i = 0; i < size; ++i) {
            lhs[i] = raw[i]
        }
    }

    public def postfix [](index: Int) -> ref T unsafe {
        if (index >= size) {
            print("No can do baby doll")
            Extern.C.exit(69.val as Int32)
        }

        return &raw[index]
    }

    public def infix +(rhs: Array<T>) -> Array<T> unsafe {
        var newArr = Array(raw, size)
        newArr += rhs
        
        return newArr
    }

    public def infix +=(rhs: Array<T>) unsafe {
        var newArr = Extern.C.malloc(size + rhs.size) as T*
        var i = 0

        copyTo(newArr)
        for (; i < rhs.size; ++i) {
            newArr[i + size] = rhs.raw[i]
        }
        
        Extern.C.free(raw as Int8*)
        raw = newArr
        size = i + size
        capacity = size
    }

    public def toString -> String {
        return "[]"
    }

    public def infix as String = toString
}